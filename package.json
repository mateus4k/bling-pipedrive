{
  "name": "bling-pipedrive",
  "version": "1.0.0",
  "author": "Mateus Sampaio",
  "license": "MIT",
  "main": "src/main/index.ts",
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "start": "tsnd --transpile-only --respawn --ignore-watch node_modules src/main",
    "lint": "eslint . --ext .ts",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:watch": "yarn test --watch --silent",
    "test:unit": "yarn test:watch -c jest-unit-config.js",
    "test:integration": "yarn test:watch -c jest-integration-config.js",
    "test:staged": "yarn test --findRelatedTests . --silent",
    "test:ci": "yarn test --coverage --silent"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongodb": "^3.6.2"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/express": "^4.17.8",
    "@types/jest": "~26.0.10",
    "@types/node": "~12.12",
    "@typescript-eslint/eslint-plugin": "~3.9.1",
    "@typescript-eslint/parser": "~3.9.1",
    "eslint": "~7.7.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-jest": "~23.20.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "prettier": "~2.0.5",
    "standard": "^14.3.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
